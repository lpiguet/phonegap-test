    <div class='header'><a href='#' class="button button-border"><i class="fi-arrow-left"></i></a><h1>Details</h1></div>
    <div class="logo"></div>
    {{#each items}}
    <div class="record">
        <table class="fields">
          <tr>
            <td colspan="2">
              <div class="project">{{Project.name}}</div>
              <div class="breadcrumb">{{{Issue.bc}}}</div>
              <div class="text">{{Issue.text}}</div>
          {{#if details}}
              <div class="details">{{Issue.details}}</div>
          {{/if}}
            </td>
          </tr>
          <tr>
            <td>
              {{#if Issue.id}}<div class="field"><div class="field_label">Id:</div><div class="field_value">{{Issue.id}}</div></div>{{/if}}

              {{#if Issue.rating}}<div class="field"><div class="field_label">#:</div><div class="field_value">{{Issue.rating}}</div></div>{{/if}}
              {{#if StatusType.name}}<div class="field"><div class="field_label">Status:</div><div class="field_value">{{StatusType.name}}</div></div>{{/if}}

              {{#if Issue.code}}<div class="field"><div class="field_label">Code:</div><div class="field_value">{{Issue.code}}</div></div>{{/if}}
              {{#if Issue.date_raised}}<div class="field"><div class="field_label">Raised:</div><div class="field_value">{{Issue.date_raised}}</div></div>{{/if}}
              {{#if Issue.date_start}}<div class="field"><div class="field_label">Start:</div><div class="field_value">{{Issue.date_start}}</div></div>{{/if}}
              {{#if Issue.date_due}}<div class="field"><div class="field_label">End/Due:</div><div class="field_value">{{Issue.date_due}}</div></div>{{/if}}
              {{#if Issue.date_completed}}<div class="field"><div class="field_label">Completed:</div><div class="field_value">{{Issue.date_completed}}</div></div>{{/if}}


              {{#if Issue.assigned_to}}<div class="field"><div class="field_label">Responsible:</div><div class="field_value">{{Issue.assigned_to}}</div></div>{{/if}}
              {{#if Issue.owned_by}}<div class="field"><div class="field_label">Accountable:</div><div class="field_value">{{Issue.owned_by}}</div></div>{{/if}}
              {{#if Issue.raised_by}}<div class="field"><div class="field_label">Raised By:</div><div class="field_value">{{Issue.raised_by}}</div></div>{{/if}}
            </td>
            <td>
              {{#if Issue.custom1}}<div class="field"><div class="field_label">Custom1:</div><div class="field_value">{{Issue.custom1}}</div></div>{{/if}}
              {{#if Issue.custom2}}<div class="field"><div class="field_label">Custom2:</div><div class="field_value">{{Issue.custom2}}</div></div>{{/if}}
              {{#if Issue.custom3}}<div class="field"><div class="field_label">Custom3:</div><div class="field_value">{{Issue.custom3}}</div></div>{{/if}}
              {{#if Issue.custom4}}<div class="field"><div class="field_label">Custom4:</div><div class="field_value">{{Issue.custom4}}</div></div>{{/if}}
              {{#if Issue.custom5}}<div class="field"><div class="field_label">Custom5:</div><div class="field_value">{{Issue.custom5}}</div></div>{{/if}}

            </td>
          </tr>
        </table>
    </div>
    {{/each}}
